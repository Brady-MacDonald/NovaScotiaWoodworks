@page
@model NovaScotiaWoodworks.Pages.Admin.ListOrdersModel
@{
}

<div>
    <div class="m-4">
        <h1>All Orders List</h1>
    </div>

	@if(User.Identity.IsAuthenticated)
    {
        <table class="table table-bordered table-striped" style="width:%100">
            <thead>
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Product
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Order Time
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                
                @foreach(var order in Model.OrderList)
                {
                    <tr>
                        <td>@order.UserName</td>
                        <td>@order.EmailAddress</td>
                        <td>@order.Product</td>
                        <td>@order.Status</td>
                        <td>@order.OrderTime</td>
                        
                        <td>
                            <div class="w-75 btn-group" role="group"> 
                                <form method="post" asp-page="/Admin/DeleteOrder" asp-route-id="@order.Id">
                                    <button type="submit" class="btn btn-danger mx-2" >
                                        <i class="bi bi-trash3"></i> Delete
                                    </button>
                                </form>
                                <!-- <form method="get" asp-page="/Admin/UpdateOrder" asp-route-id="@order.Id"> -->
                                    <a type="submit" class="btn btn-primary mx-2" asp-page="/Admin/UpdateOrder" asp-route-id="@order.Id">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No contacts to display</p>
    }
</div>