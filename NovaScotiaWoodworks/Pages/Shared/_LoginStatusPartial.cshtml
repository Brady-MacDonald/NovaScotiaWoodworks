@if (User.Identity.IsAuthenticated)
{
	<form method="post" class="form-inline" asp-page="/Account/Logout">
		<li id="welcome-list" class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" id="testing" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
				Welcome @User.Identity.Name
			</a>
            <div class="dropdown-menu">
				<a class="dropdown-item" asp-page="/Account/EditProfile">Edit Profile</a>
				@if (User.Identity.Name == "admin"){
					<a class="dropdown-item" asp-page="/Admin/ListOrders">List Orders</a>
					<a class="dropdown-item" asp-page="/Admin/ListUsers">List Users</a>
				}
                
                <div class="dropdown-divider"></div>
                <button type="submit" class="ml-2 btn btn-link">
					Logout
				</button>
            </div>
        </li>
	</form>
}
else
{
	<a class="btn btn-link" asp-page="/Account/Login">Login</a>
	<a class="btn btn-link" asp-page="/Account/Register">Register</a>
}