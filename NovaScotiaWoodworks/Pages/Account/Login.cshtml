@page
@model NovaScotiaWoodworks.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="CurrentUser.Username"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="CurrentUser.Username" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="CurrentUser.Username" />
		</div>
		
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="CurrentUser.Password"></label>
			</div>
			<div class="col-5">
				<input type="password" asp-for="CurrentUser.Password" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="CurrentUser.Password" />
		</div>

		<div class="row form-check mb-2">
			<div class="col-2">
				<input type="checkbox" asp-for="CurrentUser.RememberMe" class="form-check-input"/>
				<label class="form-check-label" asp-for="CurrentUser.RememberMe"/>
			</div>
			<div>

			</div>
		</div>

		<div class="form-group row">
			<div class="col-2">
				<input type="submit" class="btn btn-primary" value="Login" />
			</div>
			<div>

			</div>
		</div>
	</form>
</div>